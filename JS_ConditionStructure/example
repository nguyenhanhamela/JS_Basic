//BT2: Kiểm tra từ 1-50 số nào là số nguyên tố hay k? (tự thay i = tên biến khác)

for (j=1; j<=50; j++){
    let count = 0;
for (let i = 1; i<=j; i++)
if (j%i==0)
count = count+1
if (count ==2)
console.log("j là số nguyên tố")
else console.log("j không phải số nguyên tố")
}


